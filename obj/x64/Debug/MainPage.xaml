<Page
    x:Class="addressbook.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Visibility="Visible">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button x:ConnectionId='2' Name="HomeButton"
                Height="45"
                Width="45"
                                        
                >
            <Image x:ConnectionId='8' Name="HomeButton_Image" Source="/Assets/Images/icons8-home-48.png"/>
        </Button >

        <RelativePanel Grid.Row="0">

            <Button x:ConnectionId='3' Name="New"
                    RelativePanel.AlignBottomWithPanel="True"
                    HorizontalAlignment="Center"
                    Height="45"
                    Width="45"
                                      
                    Margin="500,0,0,0"
                    >
                <Image x:ConnectionId='7' Name="NewButton_Image" Source="/Assets/Images/icons8-plus-48.png"/>
             </Button>
                <Button x:ConnectionId='4' Name ="Edit"
                    RelativePanel.RightOf="New"
                    Content="&#xE104;"
                    Height="45"
                    Width="90" 
                    Margin="50,0,0,0"
                                      
                    />
            <Button x:ConnectionId='5' Name ="Delete"
                    RelativePanel.RightOf="Edit"
                    Content="&#xE74D;"
                    Height="45"
                    Width="90" 
                    Margin="50,0,0,0"
                                         
                    />
            <AutoSuggestBox x:ConnectionId='6' Name="SearchAutoSuggestBox"
                            PlaceholderText="Search Contacts"
                            RelativePanel.AlignRightWithPanel="True"
                            Height="45"
                            Width="200" 
                            Margin="200,0,0,0"
                            QueryIcon="Find"
                                                                          
                                                                                
                            />


        </RelativePanel>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2"/>


    </Grid>
</Page>

