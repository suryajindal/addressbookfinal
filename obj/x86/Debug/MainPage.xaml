<Page x:ConnectionId='1'
    x:Class="addressbook.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:local="using:addressbook"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:data ="using:addressbook.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Visibility="Visible">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--First Row with HOME,NEW,EDIT,DELETE and AUTOSEARCH -->
        <RelativePanel Grid.Row="0" Background="LightGray">
            <Button x:ConnectionId='40' Name="HomeButton"
                    RelativePanel.AlignLeftWithPanel="True"
                    Background="DarkSeaGreen"
                    Height="45"
                    Width="45"
                                            >
                <Image x:ConnectionId='48' Name="HomeButton_Image" Source="/Assets/Images/icons8-home-48.png"/>
            </Button >
            <Button x:ConnectionId='41' Name="New"
                    RelativePanel.RightOf="HomeButton"
                    HorizontalAlignment="Center"
                    Background="DarkGray"
                    Height="45"
                    Width="Auto"
                                      
                    Margin="370,0,0,0">
                <Image x:ConnectionId='47' Name="NewButton_Image" Source="/Assets/Images/icons8-plus-48.png"/>
            </Button>
            <Button x:ConnectionId='42' Name ="Edit"
                    RelativePanel.RightOf="New"
                    Height="45"
                    Width="Auto" 
                    Margin="50,0,0,0"
                                      >
                <Image x:ConnectionId='46' Name="Edit_Image" Source="/Assets/Images/icons8-edit-48.png"/>
            </Button>
            <Button x:ConnectionId='43' Name ="Delete"
                    RelativePanel.RightOf="Edit"
                    Height="45"
                    Width="90" 
                    Margin="50,0,0,0"
                                         >
                <Image x:ConnectionId='45' Name="Delete_Image" Source="/Assets/Images/icons8-trash-48.png"/>
            </Button>
            <AutoSuggestBox x:ConnectionId='44' Name="SearchAutoSuggestBox"
                            PlaceholderText="Search Contacts"
                            RelativePanel.AlignRightWithPanel="True"
                            Height="45"
                            Width="200" 
                            Margin="0,0,20,0"
                            Background="White"
                            QueryIcon="Find"
                                                                          
                                                                                 VerticalAlignment="Center" BorderThickness="1,1,1,1"/>

        </RelativePanel>

        <SplitView x:ConnectionId='2' Grid.Row="1" Background="Beige"
                   Name="ContentSplitView"
                   IsPaneOpen="True"
                   OpenPaneLength="45"
                   DisplayMode="Inline">
            <SplitView.Pane>
                <ListView x:ConnectionId='3' Name="MenuItemsListView"
                          Background="LightGray"
                          IsItemClickEnabled="True"
                                                          
                                                                 >
                    <ListView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='5' Orientation="Horizontal" Margin="0,10,0,10">
                                <Image x:ConnectionId='6'                            Height="10" Width="10" Margin="-10,0,0,0" />
                                <!--<TextBlock Text="{x:Bind FirstAlphabet}" FontSize="18" Margin="10,10,0,0" />-->
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid x:ConnectionId='7' Name ="CrudGrid" Margin="20,0,0,0" Grid.Row="0">
                        <TextBlock x:ConnectionId='17' Height="23" HorizontalAlignment="Left" Margin="29,15,0,0" Name="textBlock1" Text="NAME:" VerticalAlignment="Top" />
                        <TextBlock x:ConnectionId='18' Height="23" HorizontalAlignment="Left" Margin="28,55,0,0" Name="textBlock2" Text="HOME:" VerticalAlignment="Top" />
                        <TextBlock x:ConnectionId='19' Height="23" HorizontalAlignment="Left" Margin="20,95,0,0" Name="textBlock3" Text="MOBILE:" VerticalAlignment="Top" RenderTransformOrigin="0.337,-0.391" />
                        <TextBlock x:ConnectionId='20' Height="23" HorizontalAlignment="Left" Margin="23,135,0,0" Name="textBlock4" Text="E-MAIL:" VerticalAlignment="Top" />
                        <TextBlock x:ConnectionId='21' Height="23" HorizontalAlignment="Left" Margin="311,15,0,0" Name="textBlock5" Text="ADDRESS LINE1:" VerticalAlignment="Top" />
                        <TextBlock x:ConnectionId='22' Height="23" HorizontalAlignment="Left" Margin="311,55,0,0" Name="textBlock6" Text="ADDRESS LINE2:" VerticalAlignment="Top" />
                        <TextBlock x:ConnectionId='23' Height="23" HorizontalAlignment="Left" Margin="381,95,0,0" Name="textBlock7" Text="CITY:" VerticalAlignment="Top" />
                        <TextBlock x:ConnectionId='24' Height="23" HorizontalAlignment="Left" Margin="374,135,0,0" Name="textBlock8" Text="STATE:" VerticalAlignment="Top" />
                        <TextBlock x:ConnectionId='25' Height="23" HorizontalAlignment="Left" Margin="500,135,0,0" Name="textBlock9" Text="ZIP:" VerticalAlignment="Top" />
                        <TextBlock x:ConnectionId='26' Height="23" HorizontalAlignment="Left" Margin="655,12,0,0" Name="textBlock10" Text="URL:" VerticalAlignment="Top" />

                        <TextBox x:ConnectionId='27' Height="30" HorizontalAlignment="Left" Margin="79,12,0,0" Name="Name" VerticalAlignment="Top" Width="220" />
                        <TextBox x:ConnectionId='28' Height="30" HorizontalAlignment="Left" Margin="79,52,10,0" Name="Home" VerticalAlignment="Top" Width="220" />
                        <TextBox x:ConnectionId='29' Height="30" HorizontalAlignment="Left" Margin="79,92,10,0" Name="Mobile" VerticalAlignment="Top" Width="220" />
                        <TextBox x:ConnectionId='30' Height="30" HorizontalAlignment="Left" Margin="79,132,0,0" Name="Email" VerticalAlignment="Top" Width="220" />
                        <TextBox x:ConnectionId='31' Height="30" HorizontalAlignment="Left" Margin="417,12,10,0" Name="AddressLine1" VerticalAlignment="Top" Width="220" TextWrapping="Wrap" AcceptsReturn="True"/>
                        <TextBox x:ConnectionId='32' Height="30" HorizontalAlignment="Left" Margin="417,52,10,0" Name="AddressLine2" VerticalAlignment="Top" Width="220" TextWrapping="Wrap" AcceptsReturn="True"/>
                        <TextBox x:ConnectionId='33' Height="30" HorizontalAlignment="Left" Margin="417,92,10,0" Name="City" VerticalAlignment="Top" Width="177" TextWrapping="Wrap" AcceptsReturn="True"/>
                        <TextBox x:ConnectionId='34' Height="30" HorizontalAlignment="Left" Margin="417,132,10,0" Name="State" VerticalAlignment="Top" Width="75" />
                        <TextBox x:ConnectionId='35' Height="30" HorizontalAlignment="Left" Margin="530,132,10,0" Name="Zip" VerticalAlignment="Top" Width="75" />
                        <TextBox x:ConnectionId='36' Height="30" HorizontalAlignment="Left" Margin="690,12,0,0" Name="Url" VerticalAlignment="Top" Width="220" />


                        <Button x:ConnectionId='37' Content="SAVE" Height="45" HorizontalAlignment="Left" Margin="1000,12,0,0" Name="SaveBtn" VerticalAlignment="Top" Width="75"                      />
                        <Button x:ConnectionId='38' Content="CLOSE" Height="45" HorizontalAlignment="Left" Margin="1000,72,0,0" Name="CloseBtn" VerticalAlignment="Top" Width="75"                       />
                        <Button x:ConnectionId='39' Content="CLEAR" Height="45" HorizontalAlignment="Left" Margin="1000,132,0,0" Name="ClearBtn" VerticalAlignment="Top" Width="75"                        />

                    </Grid>

                    <TextBlock x:ConnectionId='8' Grid.Row="0" Height="23" HorizontalAlignment="Left" Margin="29,175,0,0" Name="Error" FontSize="15" VerticalAlignment="Top" Visibility="Collapsed" />


                    <Grid x:ConnectionId='9' Name ="TableGrid" Margin="20,0,0,0" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border  BorderThickness="10" Visibility="Visible" Grid.Row="1" Grid.Column="0">
                            <controls:DataGrid x:ConnectionId='16' Grid.Row="1" Grid.Column="0"
                                       x:Name="ContactDataGrid"
                                       Height="600"
                                       AutoGenerateColumns="False"
                                       Margin="20"
                                       AlternatingRowBackground="LightGray"
                                       HeadersVisibility="All"
                                       CanUserResizeColumns="True"
                                       CanUserReorderColumns="True"
                                       
                                       HorizontalScrollBarVisibility="Visible"
                                       VerticalScrollBarVisibility="Visible"
                                                                      
                                       GridLinesVisibility="All"
                                       ScrollViewer.HorizontalScrollBarVisibility="Visible" 
                                       SelectionMode="Single" 
                                                                                          >
                                <controls:DataGrid.VerticalGridLinesBrush>
                                    <SolidColorBrush Color="#66150A0A" Opacity="0.4"/>
                                </controls:DataGrid.VerticalGridLinesBrush>
                                <controls:DataGrid.HorizontalGridLinesBrush>
                                    <SolidColorBrush Color="#66100707" Opacity="0.4"/>
                                </controls:DataGrid.HorizontalGridLinesBrush>
                                <controls:DataGrid.Columns>
                                    <controls:DataGridTextColumn
                                                Header="Name"
                                                Width="SizeToCells"
                                                Binding="{Binding Name}"
                                                FontSize="15"/>
                                    <controls:DataGridTextColumn
                                                Header="Phone1"
                                                Width="SizeToCells"
                                                Binding="{Binding Phone1}"
                                                FontSize="15"/>
                                    <controls:DataGridTextColumn
                                                Header="Address"
                                                Width="SizeToCells"
                                                Binding="{Binding MailingAddress}"
                                                FontSize="15"/>
                                    <controls:DataGridTextColumn
                                                Header="Email"
                                                Width="SizeToCells"
                                                Binding="{Binding Email}"
                                                FontSize="15"/>
                                </controls:DataGrid.Columns>
                            </controls:DataGrid>
                        </Border>
                        <StackPanel  Grid.Row="1" Grid.Column="1" Margin="0,250,0,20" BorderThickness="10,10,10,12" FocusVisualPrimaryBrush="#FF5CC821">
                            <TextBlock x:ConnectionId='10' x:Name="NameDetail" FontFamily="Arial" FontSize="25"/>
                            <TextBlock x:ConnectionId='11' x:Name="AddressDetail" TextWrapping="WrapWholeWords"/>
                            <TextBlock x:ConnectionId='12' x:Name="Phone1Detail"/>
                            <TextBlock x:ConnectionId='13' x:Name="Phone2Detail"/>
                            <TextBlock x:ConnectionId='14' x:Name="EmailDetail"/>
                            <TextBlock x:ConnectionId='15' x:Name="UrlDetail" TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

